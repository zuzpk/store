{
    "compilerOptions": {
      "sourceMap": false,
      "strict": true,
      "esModuleInterop": true,
      "target": "es2020",
      "lib": ["dom"],
      "downlevelIteration": true,
      "preserveWatchOutput": true,
      "outDir": "dist",
      "jsx": "react-jsx",
      "noFallthroughCasesInSwitch": true,
      "skipLibCheck": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "removeComments": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}